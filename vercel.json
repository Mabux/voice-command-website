{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/node" },
    { "src": "!server.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "index.html" },
    { "src": "/(.+\\.js)", "dest": "/$1" },
    { "src": "/(.+\\.css)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
